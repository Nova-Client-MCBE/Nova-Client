{
  "namespace": "Nova_Client_day_counter",
  "content": {
    "type": "image",
    "size": [
      "100%c + 6px",
      "100%c + 2px"
    ],
    "texture": "textures/ui/Black",
    "alpha": 0.5,
    "layer": 1,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "day_counter_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "day_counter_opacity",
        "source_property_name": "(#slider_value / 10)",
        "target_property_name": "#alpha"
      }
    ],
    "controls": [
      {
        "number_of_days_played_text": {
          "type": "label",
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "layer": 2,
          "enable_profanity_filter": false,
          "color": "$chat_text_color",
          "text": "#text",
          "shadow": true,
          "bindings": [
            {
              "binding_name": "#number_of_days_played_text",
              "binding_name_override": "#text",
              "binding_condition": "always_when_visible",
              "binding_type": "global"
            }
          ]
        }
      }
    ]
  }
}