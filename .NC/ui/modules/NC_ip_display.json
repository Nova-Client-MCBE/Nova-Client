          "$server_name": "(#player_list_title = 'Lifeboard Network')",
          "ignored": "(not $is_on_3p_server)",
          "$server_ip": "IP: mco.§4lbsg§f.net"
        }
      },
      {
        "zeqa@Nova_Client_ip_template.content": {
