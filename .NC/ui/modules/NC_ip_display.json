{
  "namespace": "Nova_Client_ip_display",
  "content": {
    "type": "panel",
    "size": [
      "100%c",
      "100%c"
    ],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "ip_display_hud_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "world_name": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "alpha": 0.5,
          "size": [
            "100%c + 6px",
            16
          ],
          "ignored": "$is_on_3p_server",
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "ipdisplay_opacity",
              "source_property_name": "(#slider_value / 10)",
              "target_property_name": "#alpha"
            }
          ],
          "controls": [
            {
              "label": {
                "type": "label",
                "text": "#text",
                "layer": 12,
                "offset": [
                  2,
                  0
                ],
                "shadow": false,
                "bindings": [
                  {
                    "binding_name": "#player_list_title"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "#player_list_title",
                    "target_property_name": "#text"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#player_list_title - ('Hive Games' + 'CubeCraft Games'  + 'Galaxite'  + 'Mineville City'  + 'Lifeboard Network'  + 'Zeqa Network' + 'NetherGames Network' + 'Hyperlands Network' + 'Enchanted') = #player_list_title)",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "hive_games@Nova_Client_ip_template.content": {
          "$server_name": "(#player_list_title = 'Hive Games')",
          "ignored": "(not $is_on_3p_server)",
          "$server_ip": "IP: geo.§6hivebedrock§f.network"
        }
      },
      {
        "cubecraft@Nova_Client_ip_template.content": {
          "$server_name": "(#player_list_title = 'CubeCraft Games')",
          "ignored": "(not $is_on_3p_server)",
          "$server_ip": "IP: play.§bcubecraft§f.net"
        }
      },
      {
        "galaxite@Nova_Client_ip_template.content": {
