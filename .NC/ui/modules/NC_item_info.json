{
  "namespace": "Nova_Client_item_info_panel",
  "content": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [
      "100%c",
      "100%c"
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "item_information_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "name_panel": {
          "type": "panel",
          "size": [
            "100%c",
            "100%c"
          ],
          "controls": [
            {
              "item_name@Nova_Client_common.black": {
                "$black_size": [
                  "100%c +4px",
                  "100%c +4px"
                ],
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "item_info_opacity",
                    "source_property_name": "(#slider_value / 10)",
                    "target_property_name": "#alpha"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "item_info_item_name",
                    "source_property_name": "#toggle_state",
                    "target_property_name": "#visible"
                  }
                ],
                "controls": [
                  {
                    "text": {
                      "type": "label",
                      "layer": 2,
                      "text": "#name",
                      "shadow": true,
                      "property_bag": {
                        "force_update": true
                      },
                      "bindings": [
                        {
                          "binding_name": "#item_text"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "('Item Name: ' + #item_text)",
                          "target_property_name": "#name"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "aux_panel": {
          "type": "panel",
          "size": [
            "100%c",
            "100%c"
          ],
          "controls": [
            {
              "item_aux@item_aux": {
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "item_aux_id",
                    "source_property_name": "#toggle_state",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "id_panel": {
          "type": "panel",
          "size": [
            "100%c",
            "100%c"
          ],
          "controls": [
            {
              "item_id@item_id": {
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "item_id_toggle",
                    "source_property_name": "#toggle_state",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "item_id": {
    "type": "stack_panel",
    "collection_name": "hotbar_items",
    "size": [
      "100%cm",
      "100%c"
    ],
    "controls": [
